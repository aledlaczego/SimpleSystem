<Window x:Class="SimpleSystem.OrdersUI.OrdersForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleSystem.OrdersUI"
        mc:Ignorable="d"
        Title="OrdersForm" Height="500" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="270"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <DataGrid x:Name="OrdersDataGrid" Grid.Row="1">
                    
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OrderDeleteBtn" Height="30" Width="80" HorizontalAlignment="Right" Margin="0,0,30,0" Content="Delete"  />
        </StackPanel>
        

    </Grid>
</Window>
